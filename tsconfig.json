{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": [
    "src/**/*",
    "src/@types/**/*",
    "packages/validations/src/schemas/userSchema.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
