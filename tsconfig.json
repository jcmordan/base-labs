{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "paths": {
      "@/api/*": ["./src/api/src/*"],
      "@/core/*": ["./packages/core/src/*"],
      "@/logger/*": ["./packages/logger/src/*"]
    }
  },
  "include": ["src/**/*", "src/@types/**/*", "packages/core/src/services"],
  "exclude": ["node_modules", "dist"]
}
